<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pe.edu.upc.librerialector">

    <application
        android:allowBackup="true"
        android:fitsSystemWindows="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">
        <activity android:name=".BuscarProductos"></activity>
        <activity android:name=".EliminarProductos" />
        <activity android:name=".ModificarProductos" />
        <activity android:name=".RegistrarProductos" />
        <activity android:name=".MenuAdministrador">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".ListarActivity"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".VisorImagen"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".TiendasActivity"
            android:windowSoftInputMode="adjustPan" />
    </application>

</manifest>